<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerWorkSchedule">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleSchedule"
        android:layout_width="376dp"
        android:layout_height="456dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtScheduleWorkPlace" />

    <TextView
        android:id="@+id/txtScheduleManagerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="104dp"
        android:fontFamily="@font/comic"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#136EF1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtScheduleWorkPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/comic"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#136EF1"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtScheduleManagerName" />

    <Button
        android:id="@+id/btnResetSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="#136EF1"
        android:fontFamily="@font/comic"
        android:text="Reset schedule"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleSchedule" />
</androidx.constraintlayout.widget.ConstraintLayout>